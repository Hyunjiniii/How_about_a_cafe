<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:layout_margin="4sp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:layout_marginLeft="18sp"
                android:layout_marginBottom="12sp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/list_review_user_profile"
                    android:layout_width="60sp"
                    android:layout_height="60sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/list_review_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="닉네임"
                            android:textColor="#9c47d9"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/list_review_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8sp"
                            android:text="18.02.12"
                            android:textColor="#8b8b8b" />

                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/list_review_user_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/list_review_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="#b1b1b1"/>


            <ImageView
                android:id="@+id/list_review_image"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:visibility="visible"
                android:scaleType="matrix"
                android:layout_marginTop="18sp"
                android:layout_marginLeft="18sp"
                android:layout_marginRight="18sp"/>

            <View
                android:id="@+id/list_review_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="18sp"
                android:background="#b1b1b1"/>

            <TextView
                android:id="@+id/list_review_review"
                android:layout_margin="18sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>